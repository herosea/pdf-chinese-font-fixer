[Unit]
Description=PDF Chinese Font Fixer Backend
After=network.target

[Service]
User=root
# Adjust WorkingDirectory to where the repo is cloned
WorkingDirectory=/root/pdf-chinese-font-fixer/backend
# Use the virtual environment Python
ExecStart=/root/.local/bin/uv run uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
EnvironmentFile=/root/pdf-chinese-font-fixer/backend/.env

[Install]
WantedBy=multi-user.target
